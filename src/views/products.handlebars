<h1>Productos</h1>

{{#each products}}
<div class="product">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Precio: {{price}}</p>
  <p>Categoría: {{category}}</p>
  
  <!-- Opción 1: Botón para ver detalles del producto en una nueva vista -->
  <a href="/products/{{id}}">Ver detalles</a>
  
  <!-- Opción 2: Botón para agregar al carrito directamente -->
  <form action="/api/carts/add" method="post">
    <input type="hidden" name="productId" value="{{id}}">
    <button type="submit">Agregar al carrito</button>
  </form>
</div>
{{/each}}
